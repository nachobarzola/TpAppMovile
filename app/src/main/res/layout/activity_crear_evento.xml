<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Presentacion.CrearEventoActivity"
    android:background="@color/colorCrearEventoFondo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorCrearEventoToolbarDivisor"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/toolbarCrearEvento"
        tools:layout_editor_absoluteX="0dp"></LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCrearEvento"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?attr/colorPrimary"
        android:backgroundTint="@color/colorCrearEventoFondoToolbar"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/crearEvento_tileToolbar"
        app:titleTextColor="@color/colorCrearEventoText" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_guardarEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_menu_save"
        android:backgroundTint="@color/colorCrearEventoBordesTV"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/crearEvento_textNombre"
        android:textColor="@color/colorCrearEventoText"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarCrearEvento" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/crearevento_diseno_campos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_fecha_crear_evento"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_nombre_crear_evento" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

    <EditText
        android:id="@+id/et_nombre_evento"
        android:layout_width="335dp"
        android:layout_height="35dp"
        android:layout_marginStart="35dp"
        android:background="@drawable/crearevento_diseno_campos2"
        android:ems="10"
        android:hint="@string/crearEvento_textHintNombre"
        android:inputType="textPersonName"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/colorCrearEventoText"
        android:textColorHint="@color/colorCrearEventoText"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/frameLayout"
        app:layout_constraintTop_toTopOf="@+id/frameLayout" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/crearEvento_textDescripcion"
        android:textColor="@color/colorCrearEventoText"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/frameLayout3"
        app:layout_constraintTop_toBottomOf="@+id/et_nombre_evento" />

    <FrameLayout
        android:id="@+id/frameLayout3"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/crearevento_diseno_campos"
        app:layout_constraintStart_toStartOf="@+id/frameLayout"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="33dp"
                android:layout_height="35dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_descripcion_crear_evento"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

    <EditText
        android:id="@+id/et_descripcion_evento"
        android:layout_width="335dp"
        android:layout_height="80dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/crearevento_diseno_campos2"
        android:ems="10"
        android:textColor="@color/colorCrearEventoText"
        android:textColorHint="@color/colorCrearEventoText"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="@+id/frameLayout3"
        app:layout_constraintTop_toTopOf="@+id/frameLayout3"
        android:hint="@string/crearEvento_textHintDescripcion"
        android:textAlignment="center"
        android:textSize="15dp"
        />

    <ImageButton
        android:id="@+id/btnFecha"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/crearevento_diseno_campos"
        android:scaleType="fitStart"
        android:src="@drawable/ic_fecha_crear_evento"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/et_descripcion_evento" />


    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/crearevento_diseno_campos2"
        android:text="@string/crearEvento_textFecha"
        android:textAlignment="center"
        android:textColor="@color/colorCrearEventoText"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnFecha"
        app:layout_constraintStart_toStartOf="@+id/btnFecha"
        app:layout_constraintTop_toTopOf="@+id/btnFecha"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/btnHora"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/crearevento_diseno_campos"
        android:scaleType="fitStart"
        android:src="@drawable/ic_hora_crear_evento"
        app:layout_constraintStart_toStartOf="@+id/btnFecha"
        app:layout_constraintTop_toBottomOf="@+id/btnFecha" />

    <TextView
        android:id="@+id/tvHora"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/crearevento_diseno_campos2"
        android:text="@string/crearEvento_textHora"
        android:textColor="@color/colorCrearEventoText"
        android:textSize="15dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/btnHora"
        app:layout_constraintStart_toStartOf="@+id/btnHora"
        app:layout_constraintTop_toTopOf="@+id/btnHora" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/crearEvento_textDireccion"
        android:textColor="@color/colorCrearEventoText"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/tvUbicacion"
        app:layout_constraintStart_toStartOf="@+id/frameLayout3" />

    <FrameLayout
        android:id="@+id/frameLayout4"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/crearevento_diseno_campos"
        app:layout_constraintStart_toStartOf="@+id/frameLayout3"
        app:layout_constraintTop_toBottomOf="@+id/tvHora">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_ubicacion_crear_evento"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/tvUbicacion"
        android:layout_width="335dp"
        android:layout_height="35dp"
        android:layout_marginStart="35dp"
        android:background="@drawable/crearevento_diseno_campos2"
        android:text=""
        android:textColor="@color/colorCrearEventoText"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/frameLayout4"
        app:layout_constraintStart_toStartOf="@+id/frameLayout4"
        app:layout_constraintTop_toTopOf="@+id/frameLayout4" />

    <FrameLayout
        android:layout_width="384dp"
        android:layout_height="244dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorCrearEventoBordesTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUbicacion">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="380dp"
                android:layout_height="240dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:context=".Presentacion.CrearEventoActivity" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>