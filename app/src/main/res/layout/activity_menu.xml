<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Presentacion.MenuActivity"
    android:background="@color/colorFondoPrincipal">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="409dp"
        android:layout_height="53dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbarHome"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_crearEvento"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@drawable/btn_menu"
        android:text="@string/menu_btnCrearEvento"
        android:textColor="@color/colorFondoPrincipal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNombre" />

    <Button
        android:id="@+id/btn_listaEventos"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/menu_btnListaEventos"
        app:layout_constraintEnd_toEndOf="@+id/btn_crearEvento"
        app:layout_constraintStart_toStartOf="@+id/btn_crearEvento"
        app:layout_constraintTop_toBottomOf="@+id/btn_crearEvento"
        android:textColor="@color/colorFondoPrincipal"
        android:background="@drawable/btn_menu"
        />

    <Button
        android:id="@+id/btn_mis_invitaciones"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/menu_btnListaInvitaciones"
        app:layout_constraintEnd_toEndOf="@+id/btn_listaEventos"
        app:layout_constraintStart_toStartOf="@+id/btn_listaEventos"
        app:layout_constraintTop_toBottomOf="@+id/btn_listaEventos"
        android:textColor="@color/colorFondoPrincipal"
        android:background="@drawable/btn_menu"
        />
    <Button
        android:id="@+id/btn_escanerQR"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/menu_btnEscanerQR"
        app:layout_constraintEnd_toEndOf="@+id/btn_mis_invitaciones"
        app:layout_constraintStart_toStartOf="@+id/btn_mis_invitaciones"
        app:layout_constraintTop_toBottomOf="@+id/btn_mis_invitaciones"
        android:textColor="@color/colorFondoPrincipal"
        android:background="@drawable/btn_menu"/>

</androidx.constraintlayout.widget.ConstraintLayout>